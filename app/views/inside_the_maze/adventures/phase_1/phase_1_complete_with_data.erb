<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 2px solid #BED4E5;
  text-align: left;
  padding: 8px;
}

tr:nth-child(odd) {
  background-color: #D1D7EC;
  animation: odd-cell 15s infinite;
}

@keyframes odd-cell
  {
    50% {
      background-color: #DFE3F2;
    }
  }

tr:nth-child(even) {
  background-color: #D2E1ED;
  animation: even-cell 15s infinite;
}

@keyframes even-cell
  {
    50% {
      background-color: #E5EEF5;
    }
  }
}
</style>

<h3 class="glowsmall"><div class="typewriter"><%= @user.first_name.upcase %>EUS, YOU HAVE COMPLETED:</div></h3>
  <br>
<h1 class="glow">PHASE I</h1><br>

<div class="glowsmall"><center>
  <br>
 <a href="/projects" title="Projects">Projects</a> | <a href="/about2" title="About">About</a> | <a href="/contact" title="Contact">Contact</a> | <a href="/logout" title="Logout">Logout</a><br>
</center></div><br>

<table>
  <tr>
    <th>TASKS</th>
    <th></th>
    <th></th>
  </tr>
<% @project.tasks.each do |task| %>
  <tr>
  <td>
    <center>
    <form class="" action="/phase_1_saved/<%=task.id%>/<%= @project.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <textarea style="resize: none" rows="3" cols="68" type="text" name="the_action_description"><%= task.the_action_description.gsub(/(\[" )|( "]|\[")|("])/, '')%></textarea>
    </td>
    <td>
    <input type="submit" value="EDIT">
    </form>
    </td>
    <td>
    <form class="" action="/phase_1_saved/<%=task.id%>/<%= @project.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="DELETE">
    </form>
    </td>
<% end %>
</table>
