<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td, th {
    border: 1px solid #F9F5F1;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(odd) {
    background-color: #E5DCD2;
    animation: odd-cell 15s infinite;
  }

  @keyframes odd-cell
    {
      50% {
        background-color: #E6D7B9;
      }
    }

  tr:nth-child(even) {
    background-color: #E6D7B9;
    animation: even-cell 15s infinite;
  }

  @keyframes even-cell
    {
      50% {
        background-color: #E5DCD2;
      }
    }
  }
</style>



