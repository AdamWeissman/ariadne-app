<form class="" action="/phase_3_segments_complete/<%=@project.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
<table>
  <tr>
    <th><center>YOUR TASKS WITH A SUGGESTED ORDER</center></th>
    <th><center>CHOOSE THE LIKELY SEGMENT</center></th>
  </tr>
  <tr>
<% @project.tasks.order(:calculated_rank).each do |task| %>
  <input type="hidden" name="project[tasks][][calculated_rank]" value=<%=task.calculated_rank%>>
  <td><%=task.the_action_description.gsub(/(\[" )|( "]|\[")|("])/, '')%>
  <input type="hidden" name="project[tasks][][task_id]" value=<%=task.id%>>
  <td><center><select name="project[tasks][][segment]">
    <option value="D">--You MUST choose one of each--</option>
    <option value="A">FOUNDATIONAL</option>
    <option value="B">INTERMEDIARY</option>
    <option value="C">FINAL</option>
</select></center></td>
  </tr>
    <% end %>
</table><center>
  <br>
<input type="submit" value="NEXT">
</center>
</form>

